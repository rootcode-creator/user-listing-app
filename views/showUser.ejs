<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Users Informations</title>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
        }

        h1 {
            text-align: center;
        }
    </style>
</head>

<body>
    <h1>User Details</h1>

    <table>

        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>

        </tr>


        <% for(user of users){ %>

            <tr>
                <td>
                    <%= user.id %>
                </td>
                <td>
                    <%= user.username %>
                </td>
                <td>
                    <%= user.email %>
                </td>

                <td>
                    <%= user.password %>
                </td>

                <td>
                    <form action="/user/<%= user.id%>/edit" method="get">

                         <button>Edit Details </button>
                         
                    </form>
                   
                </td>


                <td>
                    <form action="/user/<%= user.id%>/delete" method="get">

                         <button>Delete</button>
                         
                    </form>
                   
                </td>
            </tr>

            <% } %>

    </table>
</body>

</html>